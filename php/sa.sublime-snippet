	<content><![CDATA[
public function selectAll() {
  \$sql = "SELECT * FROM `${1:table}`";
  \$stmt = \$this->pdo->prepare(\$sql);
  \$stmt->execute();
  return \$stmt->fetchAll(PDO::FETCH_ASSOC);
}${0}
]]></content>
